pipeline {
    agent any


    stages {
        stage('Clone Selected Branch') {
            steps {
                git branch: "branch1", url: 'https://github.com/mohammedali6969/demo.git'
            }
        }

        stage('List Files') {
            steps {
                sh 'ls -l'
            }
        }

        stage('Run Script') {
            steps {
                sh 'python3 app.py'
            }
        }
    }
}
